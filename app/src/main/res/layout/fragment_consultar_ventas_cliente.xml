<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.ConsultarVentasCliente">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="448dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tfIdentificacionCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Identificacion Cliente"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnConsultar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Consultar" />

            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpiar" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCampoNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCampoCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTotalCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Compra:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCampoTotalCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/producosVentas"
            android:layout_width="match_parent"
            android:layout_height="188dp" />

    </LinearLayout>
</FrameLayout>